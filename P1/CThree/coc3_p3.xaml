            <Frame HorizontalOptions="Center">
                <Image Source="joker1" Aspect="AspectFit"/>
            </Frame>
            <StackLayout>
                <Label Text="Video Card" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="30" BackgroundColor="#F8EFBA"/>
            </StackLayout>
